{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false, // has to disable it because of 3rd parties
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "components": ["src/components"],
      "images/*": ["src/images/*"],
      "utils/*": ["src/utils/*"],
      "styles": ["src/styles"],
      "hooks/*": ["src/hooks/*"],
      "hooks": ["src/hooks"],
      "icons": ["src/icons"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/tests/*"]
}
