{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false, // has to disable it because of 3rd parties
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "components": ["src/components"],
      "images/*": ["src/images/*"],
      "utils/*": ["src/utils/*"],
      "styles": ["src/styles"],
      "icons": ["src/icons"]
    },
    "types": ["styled-components", "@material-ui/core"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests/*", "node_modules/**"]
}
